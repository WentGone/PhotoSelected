<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <android.support.v7.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="40dp"
       app:theme="@style/ToolbarTheme"
       android:visibility="gone">
   </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <SurfaceView
            android:id="@+id/act_camera_video_SurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/act_camera_video_TV_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp"
            android:textColor="@color/White"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/act_camera_video_MagicIndicator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal">
        </net.lucode.hackware.magicindicator.MagicIndicator>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="#222222">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_homepage_camera5"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/act_camera_video_IV_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_homepage_camera5"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/act_camera_video_IV_showPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_homepage_camera5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
