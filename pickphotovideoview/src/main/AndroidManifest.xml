    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".activity.PickPhotoActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activity.PickPhotoPreviewActivity"
            android:label="@string/title_activity_pick_photo_preview"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".activity.PickVideoPreviewActivity" />
        <activity
            android:name=".camera.activity.CameraVideoActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <activity android:name=".activity.PickCropActivity"></activity>
